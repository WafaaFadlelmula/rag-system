# ── OpenAI ────────────────────────────────────────────────────────────────────
OPENAI_API_KEY="your-openai-api-key-here"

# ── Qdrant — choose ONE block ─────────────────────────────────────────────────

# Option A: Local Docker (default — works out of the box)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Option B: Qdrant Cloud (comment out Option A when using this)
# Get these from cloud.qdrant.io → your cluster → "Connect" tab
# QDRANT_URL=https://<cluster-id>.cloud.qdrant.io:6333
# QDRANT_API_KEY=your-qdrant-api-key-here

# ── Monitoring DB ─────────────────────────────────────────────────────────────
# Optional. Defaults to data/monitoring/queries.db inside the project root.
# On a cloud server with a persistent volume, point this to the mounted path.
# MONITORING_DB_PATH=/mnt/data/queries.db

# ── Ingestion pipeline ────────────────────────────────────────────────────────
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
CHUNKS_DATA_PATH=./data/chunks

OUTPUT_FORMAT=markdown
EXPORT_TABLES=true
EXPORT_IMAGES=false

# ── Logging ───────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
